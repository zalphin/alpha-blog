<%= render 'shared/errors', obj: @article %>
	
	
<%= form_for @article do |f| %>
	<div class="form-group row">
		<label for="inputArticleTitle" class="col-sm-2 col-form-label">
			<%= f.label :title %>
		</label>
		<div class="col-sm-10">
			<%= f.text_field :title, type: "title", class: "form-control", placeholder: "Title of article", autofocus: true %>
		</div>
	</div>
	
	<div class="form-group row">
		<label for="ArticleDescription" class="col-sm-2 col-form-label">
			<%= f.label :description %>
		</label>
		<div class="col-sm-10">
			<%= f.text_area :description, type: "Description", rows: 10, class: "form-control", placeholder: "body of article" %>
		</div>
	</div>
	
	<div class="form-group">
		<%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {:class => 'form-check-input mr-1'} do |cb| %>
				<% cb.label(class: "form-check-label pr-2 input_checkbox") {cb.check_box + cb.text } %>
		<% end %>
	</div>
	
	<div class="form-group row">
		<label class="col-sm-2 col-form-label"></label>
		<div class="col-sm-offset-10 col-sm-10">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>
<% end %>

<div align="center">
	[ <%= link_to "Cancel", articles_path %> ]
</div>