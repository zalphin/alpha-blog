<%= render 'shared/errors', obj: @user %>
	
<%= form_for @user do |f| %>
	<div class="form-group row">
		<label for="inputArticleTitle" class="col-sm-2 col-form-label">
			<%= f.label :username %>
		</label>
		<div class="col-sm-10">
			<%= f.text_field :username, type: "username", class: "form-control", placeholder: "Enter username", autofocus: true %>
		</div>
	</div>
	
	<div class="form-group row">
		<label for="Email" class="col-sm-2 col-form-label">
			<%= f.label :email %>
		</label>
		<div class="col-sm-10">
			<%= f.email_field :email, type: "Email", class: "form-control", placeholder: "Enter email" %>
		</div>
	</div>
	
	<div class="form-group row">
		<label for="password" class="col-sm-2 col-form-label">
			<%= f.label :password %>
		</label>
		<div class="col-sm-10">
			<%= f.password_field :password, type: "password", class: "form-control", placeholder: "Enter password" %>
		</div>
	</div>
	
	
	<div class="form-group row">
		<label class="col-sm-2 col-form-label"></label>
		<div class="col-sm-offset-10 col-sm-10">
			<%= f.submit(@user.new_record? ? "Sign up" : "Save", class: "btn btn-primary") %>
		</div>
	</div>
<% end %>

<div align="center">
	[ <%= link_to "Cancel", articles_path %> ]
</div>