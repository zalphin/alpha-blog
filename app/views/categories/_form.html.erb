<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %>
	<div class="form-group row">
		<label for="InputLabel" class="col-sm-2 col-form-label">
			<%= f.label :name %>
		</label>
		<div class="col-sm-10">
			<%= f.text_field :name, type: "name", class: "form-control", placeholder: "Enter category name", autofocus: true %>
		</div>
	</div>
	
	<div class="form-group row">
		<label class="col-sm-2 col-form-label"></label>
		<div class="col-sm-offset-10 col-sm-10">
			<%= f.submit(@category.new_record? ? "Create Category" : "Save", class: "btn btn-primary") %>
		</div>
	</div>
<% end %>

<div align="center">
	[ <%= link_to "Cancel", articles_path %> ]
</div>